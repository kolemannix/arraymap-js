{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src", "src/**/*"]
}
